<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yedam.myserver.cart.mapper.CartMapper">

<!-- 장바구니 전체조회 --> 
<select id="findAll" 
        resultType="cartVO">
	SELECT *
	  FROM CART
	 ORDER BY NO  
</select>

<!-- 수량변경 -->
<update id="merge">
	UPDATE CART SET
		   QTY = #{qty}
	 WHERE NO = #{no}	   
</update>

<!-- 장바구니 전체 삭제 -->
<delete id="removeAll">
	DELETE FROM CART 
</delete>

<!-- 장바구니 단건 삭제 -->
<delete id="remove">
	DELETE CART 
	 WHERE NO = #{no} 
</delete>

</mapper>